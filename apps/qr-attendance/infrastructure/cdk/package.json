{
  "name": "qr-attendance-infrastructure",
  "version": "0.1.0",
  "description": "QRコード打刻システムのAWSインフラストラクチャ（CDK）",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "cdk deploy --all",
    "deploy:rds": "cdk deploy QrAttendanceRdsStack-dev",
    "deploy:cognito": "cdk deploy QrAttendanceCognitoStack-dev",
    "deploy:api": "cdk deploy QrAttendanceApiStack-dev",
    "diff": "cdk diff",
    "synth": "cdk synth",
    "destroy": "cdk destroy --all"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.120.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "aws-cdk": "^2.120.0"
  }
}
